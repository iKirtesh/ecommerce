<%- include('./partials/header') %>

<div class="w-full h-screen flex items-start px-20 py-20">
    <!-- Sidebar Navigation -->
    <div class="w-[25%] flex flex-col items-start">
        <div class="flex flex-col">
            <a class="block w-fit mb-2 text-blue-500" href="/products">All Products</a>
            <a class="block w-fit mb-2 text-blue-500" href="/products/create">Create New Product</a>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="w-[75%] flex flex-col gap-5">
        <% if (products && products.length > 0) { %>
            <div class="flex flex-wrap gap-5">
                <% products.forEach(function(product) { %>
                    <div class="w-60 border rounded shadow">
                        <div class="w-full h-52 flex items-center justify-center" style="background-color: <%= product.bgColor || '#f0f0f0' %>;">
                            <% if (product.image) { %>
                                <img class="h-[12rem]" src="data:image/jpeg;base64,<%= product.image %>" alt="<%= product.name %>">
                            <% } else { %>
                                <span>No Image</span>
                            <% } %>
                        </div>
                        <div class="flex justify-between items-center px-4 py-4" style="background-color: <%= product.panelColor || '#fff' %>; color: <%= product.textColor || '#000' %>;">
                            <div>
                                <h3 class="font-bold"><%= product.name %></h3>
                                <h4>â‚¹ <%= product.price %></h4>
                            </div>
                            <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="#">
                                <i class="ri-add-line"></i>
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-xl">No products available</p>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') %>
